---
import Layout from "../layouts/Layout.astro";
import HeroSection from "../components/HeroSection.astro";
import MediaSection from "../components/MediaSection.astro";
import AboutSection from "../components/AboutSection.astro";
import TrainingsSection from "../components/TrainingsSection.astro";
import ContactSection from "../components/ContactSection.astro";
import HeaderSection from "../components/HeaderSection.astro";
import FooterSection from "../components/FooterSection.astro";
import SummerSpecial from "../components/SummerSpecial.astro";

import "../styles/global.css";
---

<Layout title="Lobstars Ultimate Frisbee - Berlin">
  <main class="h-full w-full">
    <HeaderSection
      id="header"
      logoHref="#main"
      trailingLinks={[
        {
          href: "#training",
          label: "Train With Us",
        },
        {
          href: "#contact",
          label: "Contact",
        },
      ]}
    >
      <a href="#summer-special" class="font-bold">
        <div
          class="flex flex-col items-center justify-center bg-orange-200 px-4 py-1 sm:flex-row sm:gap-2"
        >
          <p class="italic">New to ultimate?</p>
          <p class="text-secondary">🏖️☀️ Join our Sunday intro sessions ☀️🏖️</p>
        </div>
      </a>
    </HeaderSection>
    <HeroSection id="main" />
    <AboutSection id="about" />
    <MediaSection id="media" />
    <SummerSpecial id="summer-special" />
    <TrainingsSection id="training" />
    <ContactSection id="contact" />
    <FooterSection />
  </main>
</Layout>
