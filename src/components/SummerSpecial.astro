---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section id={id} class="section-container flex justify-center">
  <div class="grid w-full gap-4 bg-orange-200 p-8 md:w-4/5">
    <h3 class="text-center">🏖️☀️🌟SUMMER INTRO SESSIONS🌟☀️🏖️</h3>
    <p class="text-center">
      New to ultimate frisbee? Come join our introduction to Ultimate Frisbee
      sessions! All levels welcome.
      <ul class="text-center">
        <li><b>When:</b> Every Sunday this August 2024</li>
        <li><b>Time:</b> 13.00-14.30</li>
        <br />
        <li>
          <a
            href="https://maps.app.goo.gl/vPu6uVFTxDMCMFas9"
            target="_blank"
            class="font-bold underline"
            >Sportwiese im Friedrich-Ludwig-Jahn Sportpark
          </a>
        </li>
        <li>Mauer Park, Berlin</li>
        <br />
        <li>
          Check our instagram for updates: <a
            target="_blank"
            rel="noopener noreferrer"
            href="https://www.instagram.com/lobstarsfrisbee"
            class="font-bold text-secondary"
          >
            @lobstarsfrisbee
          </a>
        </li>
      </ul>
    </p>
  </div>
</section>
