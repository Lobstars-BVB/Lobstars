---
interface Props {
  title: string;
  day: string;
  time: string;
  address: string;
  openMapURL: string;
  openMapIframeSrc: string;
  googleMapURL: string;
}

const { title, day, time, address, openMapURL, openMapIframeSrc, googleMapURL } = Astro.props;
---

<div class="p-5">
  <h2 class="text-2xl font-bold">{title}</h2>
  <p class="text-lg">Day: {day}</p>
  <p class="text-lg">Time: {time}</p>
  <p class="text-lg">Address: {address}</p>
  <div class="map-container">
    <iframe src={openMapIframeSrc} width="400px" height="300px"></iframe>
    <p><small><a href={openMapURL}>View Larger Map</a></small></p>


    <small>
      <a href={googleMapURL} target="_blank" rel="noopener noreferrer">
        Google Maps
      </a>
    </small>
  </div>
</div>
