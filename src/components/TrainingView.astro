---
interface Props {
  title: string;
  day: string;
  time?: string;
  address: string;
  place: string;
  openMapURL: string;
  openMapIframeSrc: string;
  googleMapURL: string;
}

const {
  title,
  day,
  time,
  address,
  place,
  openMapURL,
  openMapIframeSrc,
  googleMapURL,
} = Astro.props;
---

<div class="space-y-4">
  <h2 class="text-2xl font-bold text-secondary">{title}</h2>
  <div class="space-y-2 font-medium text-main">
    <div>
      <p><b>When:</b> {day}</p>
      {
        time && (
          <p>
            <a href="#training-note">
              <b>Time:</b>
              <span class="underline">{time}</span> *
            </a>
          </p>
        )
      }
    </div>
    <div>
      <p>{place}</p>
      <p>{address}</p>
    </div>
  </div>
  <div class="content-container p-1">
    <iframe
      src={openMapIframeSrc}
      width="100%"
      height="300px"
      title=`Map of ${place} at ${address}`></iframe>
  </div>
  <div class="link space-y-2 font-medium">
    <p>
      <a target="_blank" rel="noopener noreferrer" href={openMapURL}
        >Open Street Map</a
      >
    </p>
    <p>
      <a href={googleMapURL} target="_blank" rel="noopener noreferrer">
        Google Map
      </a>
    </p>
  </div>
</div>
