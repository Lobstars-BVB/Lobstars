---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
import team from "../assets/team.jpg";

interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section
  id={id}
  class="hero-container flex h-screen flex-col items-center justify-center gap-10 sm:flex-row-reverse"
>
  <div class="w-2/3 sm:w-2/5">
    <Image src={logo} alt="lobstars logo" />
  </div>
  <div class="sm:w-3/5">
    <div class="content-container">
      <Image
        src={team}
        alt="lobstars team"
        widths={[240, 540, 720, 900]}
        sizes={"(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, 900px"}
      />
    </div>
  </div>
</section>
