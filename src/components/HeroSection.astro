---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
import team from "../assets/team.jpg";

interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section
  id={id}
  class="hero-container flex min-h-screen flex-col items-center justify-center"
>
  <a class="anchor" id={id}></a>
  <div
    class="flex flex-col items-center justify-center gap-10 sm:flex-row-reverse"
  >
    <div class="w-2/3 sm:w-2/5">
      <Image
        src={logo}
        alt="Lobstars logo"
        quality={50}
        widths={[350, 500, 700]}
        loading="eager"
        sizes="(max-width: 450px) 350, (max-width: 800) 500px, 700px"
      />
    </div>
    <div class="sm:w-3/5">
      <div class="content-container">
        <Image
          src={team}
          alt="Lobstars Ultimate Frisbee Teamphoto in Lichtenberg"
          widths={[350, 500, 800]}
          sizes="(max-width: 450px) 350, (max-width: 800) 500px, 800px"
          loading="eager"
          quality={50}
        />
      </div>
    </div>
  </div>
  <div class="flex flex-col gap-6">
    <div class="text-center">
      <h1 class="hero mt-3">Lobstars Ultimate Frisbee</h1>
      <h3>SV BVB 49 e.V. | Berlin Lichtenberg</h3>
    </div>
    <div class="flex justify-center gap-4">
      <a href="/#training" class="button">Train With Us</a>
      <a href="/#contact" class="button">Contact</a>
    </div>
  </div>
</section>
