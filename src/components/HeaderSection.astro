---
import logo from "../assets/logo.png";
import { Image } from "astro:assets";

interface Props {
  id: string;
}

const { id } = Astro.props;

const trailingLinks = [
  {
    href: "/",
    label: "Home",
  },
  {
    href: "/ultimate",
    label: "What is Ultimate?",
  },
];
---

<header id={id} class="fixed left-0 right-0 z-50 bg-background">
  <a href="#summer-special" class="font-bold">
    <div
      class="flex flex-col items-center justify-center bg-orange-200 px-4 py-1 sm:flex-row sm:gap-2"
    >
      <p class="italic">New to ultimate?</p>
      <p class="text-secondary">🏖️☀️ Join our Sunday intro sessions ☀️🏖️</p>
    </div>
  </a>
  <div class="border-b border-secondary"></div>
  <nav
    class="mx-auto flex h-12 max-w-screen-xl items-center justify-between px-10 py-2"
  >
    <a href="/">
      <div class="w-10">
        <Image
          src={logo}
          alt="lobstars logo"
          quality="med"
          widths={[250, 400]}
          sizes="(max-width: 450px) 250, 400px"
        />
      </div>
    </a>
    {
      trailingLinks.length > 0 && (
        <div class="flex gap-4 text-sm font-bold text-secondary sm:text-base">
          {trailingLinks.map(({ label, href }) => (
            <a href={href}>{label}</a>
          ))}
        </div>
      )
    }
  </nav>
  <div class="border-b border-secondary"></div>
</header>
