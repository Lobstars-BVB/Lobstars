---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section id={id} class="section-container">
  <p class="text-l mb-10 text-center text-main">
    Interested in joining a training? Other questions? Let us know!
  </p>
  <form class="mx-auto max-w-md">
    <div class="mb-4">
      <label for="name" class="mb-2 block">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full rounded-md border border-gray-300 px-4 py-2"
      />
    </div>

    <div class="mb-4">
      <label for="email" class="mb-2 block">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full rounded-md border border-gray-300 px-4 py-2"
      />
    </div>

    <div class="mb-4">
      <label for="message" class="mb-2 block">Message:</label>
      <textarea
        id="message"
        name="message"
        required
        class="w-full rounded-md border border-gray-300 px-4 py-2"></textarea>
    </div>

    <button
      type="submit"
      class="rounded bg-blue-500 px-4 py-2 font-bold text-white hover:bg-blue-600"
    >
      Submit
    </button>
  </form>
</section>
