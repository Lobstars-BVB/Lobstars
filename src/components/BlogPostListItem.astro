---
interface Props {
  title: string;
  pubDate: Date;
  description: string;
  author: string;
  tags: Array<string>;
  link: string;
}

const { title, pubDate, author, tags, link } = Astro.props;
---

<li>
  <article class="flex flex-col gap-y-2">
    <p>
      Date:
      <time datetime={pubDate.toString()}>{pubDate.toDateString()}</time>
    </p>
    <div class="flex flex-col gap-y-2">
      <h3 class="link">
        <a href={link}>{title}</a>
      </h3>
      <p>Author: {author}</p>
    </div>
    <div class="flex gap-1">
      {
        tags.map((tag) => (
          <p>
            <a href="#TODO" class="rounded-full bg-gray-50 px-3 py-1.5">
              {tag}
            </a>
          </p>
        ))
      }
    </div>
  </article>
</li>
