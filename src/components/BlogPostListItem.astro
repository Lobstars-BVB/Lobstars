---
interface Props {
  title: string;
  pubDate: Date;
  description: string;
  author: string;
  tags: Array<string>;
  link: string;
}

const { title, pubDate, description, author, tags, link } = Astro.props;
---

<li>
  <a href={link}>
    <article>
      <time datetime={pubDate.toString()}>{pubDate.toDateString()}</time>
      <h3>{title}</h3>
      <div>{author}</div>
      <p>{description}</p>
      {
        tags.map((tag) => (
          <a href="#TODO" class="rounded-full bg-gray-50 px-3 py-1.5">
            {tag}
          </a>
        ))
      }
    </article>
  </a>
</li>
